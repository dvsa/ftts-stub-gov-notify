{
    "compilerOptions": {
      "target": "es2019",
      "module": "commonjs",
      "allowJs": true,
      "checkJs": true,
      "declaration": false,
      "sourceMap": true,
      "outDir": "dist",
      "rootDir": "./src",
      "removeComments": true,
      "strict": true,
      "noImplicitAny": true,
      "alwaysStrict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true
    },
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "include": [
      "src/**/*",
    ],
    "exclude": [
      "coverage",
      "node_modules",
      "migrations",
      "src/stubs",
      "tests",
      "babel.config.js",
      "**/*.test.ts",
      "**/__mocks__/*",
      "stubs"
    ]
  }
  